@model mneStore.Models.Kinds

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="uk-form-horizontal uk-margin-large">
        <h4>Kinds</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "uk-text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="uk-margin">
            @Html.LabelFor(model => model.nameKind, htmlAttributes: new { @class = "uk-form-label" })
            <div class="uk-form-controls">
                @Html.EditorFor(model => model.nameKind, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nameKind, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="uk-margin">
            <div class="uk-form-controls">
                <input type="submit" value="Save" class="uk-button uk-button-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
