@model mneStore.Models.items

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="uk-form-horizontal uk-margin-large">
        <h4>items</h4>
        <hr class="uk-divider-icon" />
        @Html.ValidationSummary(true, "", new { @class = "uk-text-danger" })
        <div class="uk-margin">
            @Html.LabelFor(model => model.nameItem, htmlAttributes: new { @class = "uk-form-label" })
            <div class="uk-form-controls">
                @Html.EditorFor(model => model.nameItem, new { htmlAttributes = new { @class = "uk-input" } })
                @Html.ValidationMessageFor(model => model.nameItem, "", new { @class = "uk-text-danger" })
            </div>
        </div>

        <div class="uk-margin">
            @Html.LabelFor(model => model.description, htmlAttributes: new { @class = "uk-form-label" })
            <div class="uk-form-controls">
                @Html.TextAreaFor(model => model.description, new { @class = "uk-textarea", @row = "5" })
                @Html.ValidationMessageFor(model => model.description, "", new { @class = "uk-text-danger" })
            </div>
        </div>

        <div class="uk-margin">
            @Html.LabelFor(model => model.brand, htmlAttributes: new { @class = "uk-form-label" })
            <div class="uk-form-controls">
                @Html.EditorFor(model => model.brand, new { htmlAttributes = new { @class = "uk-input" } })
                @Html.ValidationMessageFor(model => model.brand, "", new { @class = "uk-text-danger" })
            </div>
        </div>

        <div class="uk-margin">
            @Html.LabelFor(model => model.serialNamber, htmlAttributes: new { @class = "uk-form-label" })
            <div class="uk-form-controls">
                @Html.EditorFor(model => model.serialNamber, new { htmlAttributes = new { @class = "uk-input" } })
                @Html.ValidationMessageFor(model => model.serialNamber, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="uk-margin">
            @Html.LabelFor(model=>model.KindsId, new  {@class="uk-form-label" })
            <div class="uk-form-controls">
                @Html.DropDownList("KindsId", null,new { @class= "uk-select" })
                @Html.ValidationMessageFor(model=>model.KindsId, "",new { @class="text-danger"})
            </div>
        </div>
        <div class="uk-margin">
            @Html.LabelFor(model => model.barcode, htmlAttributes: new { @class = "uk-form-label" })
            <div class="uk-form-controls">
                @Html.EditorFor(model => model.barcode, new { htmlAttributes = new { @class = "uk-input" } })
                @Html.ValidationMessageFor(model => model.barcode, "", new { @class = "uk-text-danger" })
            </div>

        </div>
        <hr />
        <div class="uk-margin">
            <div class="uk-form-controls">
                <input type="submit" value="انشاء عنصر" class="uk-button uk-button-primary" />
  @*              <input type="button" value="عنصر اضافي" id="create" class="uk-button uk-button-default" />*@
            </div>
        </div>
    </div>
}
