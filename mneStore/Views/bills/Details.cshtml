<div uk-grid uk-scrollspy="cls: uk-animation-fade; target: > table; delay: 500; repeat: true">
    <table class="uk-table uk-table-hover uk-table-divider uk-table-justify uk-table-responsive table-shadow ">
        <thead>
            <tr>
                <th>اسم العنصر</th>
                <th>وصف العنصر</th>
                <th>brand</th>
                <th>رقم التسلسلي</th>
                <th>قارئ الباركود</th>
                <th>تاريخ الادخال</th>
                <th>نوع العنصر</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var itemBills in Model.items)
            {

                <tr>
                    <td>@Html.DisplayFor(model => itemBills.nameItem)</td>
                    <td>@Html.DisplayFor(model => itemBills.description)</td>
                    <td>@Html.DisplayFor(model => itemBills.brand)</td>
                    <td>@Html.DisplayFor(model => itemBills.serialNamber)</td>
                    <td>@Html.DisplayFor(model => itemBills.barcode)</td>
                    <td>@Html.DisplayFor(model => itemBills.bills.dateBill)</td>
                    <td>@Html.DisplayFor(model => itemBills.kinds.nameKind)</td>
                    <td>
                        <a href="~/items/Edit?id=@itemBills.id" uk-tooltip="تعديل عنصر الفاتورة" uk-icon="file-edit"></a>|
                        <a href="~/items/Delete?id=@itemBills.id" uk-tooltip="title:حذف عنصر الفاتورة  ; pos: bottom-right" uk-icon="trash"></a>
                        @*@Html.ActionLink("Edit", "Edit", new { id = itemBills.id },htmlAttributes:new { }) |
                            @Html.ActionLink("Delete", "Delete", new { id = itemBills.id })*@
                    </td>
                </tr>

            }

        </tbody>
    </table>
</div>
<p>
    @*@Html.ActionLink("تعديل الفاتورة", "Edit", new { id = Model.id },new {@class= "uk-button uk-button-default" })*@
    <a href="~/bills/Edit/@Model.id" class="uk-button uk-button-default" uk-tooltip="تعديل مصدر الفاتورة" uk-scrollspy="cls: uk-animation-slide-left; repeat: false">تعديل الفاتورة</a>
    <a href="~/bills/Index" class="uk-button uk-button-secondary" uk-tooltip="الى الخلف" uk-scrollspy="cls: uk-animation-slide-right; repeat: false">
        <span uk-icon="icon: reply"></span>
    </a>
</p>
<div uk-scrollspy="cls: uk-animation-fade; delay: 500; repeat: false">
    <span style="text-align:left">استلمت اللوازم المذكور اعلاه حس الاصول</span>
    <span style="text-align:right;margin-right:40%;">اسم المستلم/امين المستودع : <span style="border-bottom: 2px dotted #8c8b8b; font-size:12pt;">طارق زياد</span></span>
</div>
<div class="uk-grid-collapse uk-child-width-expand@s" uk-grid>

    <div class="uk-padding" uk-scrollspy="cls: uk-animation-slide-right; repeat: false">
        <h4 style="text-align:right">تاريخ: <span style="border-bottom: 2px dotted #8c8b8b; font-size:12pt;">@Html.DisplayFor(model => model.dateBill)</span></h4>
    </div>
    <div class="uk-padding" uk-scrollspy="cls: uk-animation-fade;  delay: 500; repeat: false">
        <h4 style="text-align:center">الوزارة/الدائرة: <span style="border-bottom: 2px dotted #8c8b8b; font-size:12pt;">اللوازم والمشتريات</span></h4>
    </div>
    <div class="uk-padding" uk-scrollspy="cls: uk-animation-slide-left; repeat: false">
        <h4 style="text-align:left">توقيعــه: <span style="border-bottom: 2px dotted #8c8b8b; font-size:12pt;">زياد</span></h4>
    </div>
</div>
<div uk-scrollspy="cls: uk-animation-slide-bottom; repeat: false">
    <h5><span style="border-bottom: 2px solid #8c8b8b; font-size:12pt;">نسخة الى</span></h5>
    <ul>
        <li><span>وزارة المالية/دائرة اللوازم</span></li>
        <li><span>الدائرة المالية</span></li>
    </ul>
</div>
<hr style="border-bottom: 2px solid black" />
