@model mneStore.Models.bills

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>تفاصيل الفاتوورة</h3>
<hr class="uk-divider-icon">
<div class="uk-grid-collapse uk-child-width-expand@s uk-text-center" uk-grid>
    <div uk-scrollspy="cls: uk-animation-slide-right; repeat: true">
        <div class="uk-padding">
            <img src="~/img/ministry_ar.png" />
        </div>
        <hr class="hr-line" style="border-top: 3px double #8c8b8b;" />
    </div>
    <div uk-scrollspy="cls: uk-animation-slide-top; repeat: true">
        <div class="uk-padding uk-light">
            <img src="~/img/ministry_logo.png" class="Ministry-logo" />
        </div>
    </div>
    <div uk-scrollspy="cls: uk-animation-slide-left; repeat: true">
        <div class="uk-padding uk-light">
            <img src="~/img/ministry_Eng.png" />
        </div>
        <hr style="border-top: 3px double #8c8b8b;" />
    </div>
</div>
<div style="text-align:center">
    <h2>
        مستند ادخال اللوازم
    </h2>
</div>
<div class="uk-grid-collapse uk-child-width-expand@s" uk-grid uk-scrollspy="cls: uk-animation-slide-right; repeat: true">
    <div class="uk-padding">
        <h4>استلمت من: <span style="border-bottom: 2px dotted #8c8b8b; font-size:12pt;">@Html.DisplayFor(model => model.nameBuy)</span></h4>
    </div>
    <div class="uk-padding">
        <h4>بموجب: <span style="border-bottom: 2px dotted #8c8b8b; font-size:12pt;">@Html.DisplayFor(model => model.billNumber)</span></h4>
    </div>
    <div class="uk-padding">
        <h4>تاريخ: <span style="border-bottom: 2px dotted #8c8b8b; font-size:12pt;">@Html.DisplayFor(model => model.dateBill)</span></h4>
    </div>
</div>
